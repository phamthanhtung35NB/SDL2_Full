{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "CMake Build and Debug",
          "type": "cppdbg",
          "request": "launch",
          "program": "${workspaceFolder}/bin/app",
          "args": [],
          "stopAtEntry": false,
          "cwd": "${workspaceFolder}",
          "environment": [],
          "externalConsole": false,
          "MIMode": "gdb",
          "miDebuggerPath": "/usr/bin/gdb",
          "preLaunchTask": "CMake Build",
          "setupCommands": [
              {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
              }
          ]
      }
  ]
}
